{
    "title": "Rule",
    "description": "List of Rules",
    "pageType": "view",
    "rowCheckBox":true,
    "sendIdWithCreate": true,
    "urlFields": ["_id"],
    "colorExpired": true,
    "showCountOnView":true,
    "roles":["Super Admin","Creator","Executor","Viewer"],
    "fields": [{
        "name": "Name",
        "isSort": "",
        "tableRef": "name"
    },{
        "name": "Merchant",
        "isSort": "",
        "tableRef": "merchant",
        "type":"objectName"
    },{
        "name": "Start Date",
        "isSort": "",
        "tableRef": "validFrom",
        "type":"formattedDate"
    },{
        "name": "End Date",
        "isSort": "",
        "tableRef": "validTo",
        "type":"formattedDate"
    },{
        "name": "Status",
        "isSort": "",
        "tableRef": "color",
        "type":"color"
    }
    ],
    "viewButton":{
        "name": "View Rule",
        "icon": "fa-search",
        "buttonClass": "btn-primary"
    },
    "queryButton":{
        "name": "View Query",
        "icon": "fa-file",
        "buttonClass": "btn-primary"
    },
    "action": [{
        "name": "Edit Rule",
        "icon": "fa-pencil",
        "buttonClass": "btn-primary",
        "type": "page",
        "action": "editRule",
        "roles":["Super Admin","Creator"],
        "fieldsToSend": {
            "_id": "_id"
        }
    }, {
        "name": "Delete Rule",
        "icon": "fa-trash",
        "buttonClass": "btn-danger",
        "type": "apiCallConfirm",
        "title": "Delete Rule",
        "roles":["Super Admin"],
        "content": "Are you sure you want to delete Rule?",
        "api": "Rule/deleteWithChangeStatus",
        "fieldsToSend": {
            "name": "_id",
            "value": "_id"
        }
    },{
        "name": "Copy Rule",
        "icon": "fa-copy",
        "buttonClass": "btn-primary",
        "type": "page",
        "action": "copyRule",  
        "roles":["Super Admin","Creator"], 
        "fieldsToSend": {
            "_id": "_id"
        }
    }],
    "button": [{
        "name": "Add Rule",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "createRule",
        "roles":["Super Admin","Creator"]
    }],
    "topButtonChangeAll": {
        "name": "Change All X Days Values",
        "icon": "plus",
        "class": "btn-primary",
        "roles":["Super Admin","Creator","Executor"]
    },
    "bottomButton": [{
        "name": "Play Selected",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "",
        "functionName":"playSelectedClick()",
        "roles":["Super Admin","Executor"]
    }],
    "bottomButtonPlayAll": [{
        "name": "Play All Rules",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "",
        "functionName":"playSelectedAllClick()",
        "roles":["Super Admin","Executor"]
    }],
    "bottomButtonPlayAllActive": {
        "name": "Play All Active Rules",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "",
        "functionName":"playSelectedAllActiveClick()",
        "roles":["Super Admin","Executor"]
    },
    "apiCall": {
        "url": "Rule/search",
        "params": "_id"
    }
}