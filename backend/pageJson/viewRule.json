{
    "title": "Rule",
    "description": "List of Rules",
    "pageType": "view",
    "rowCheckBox":true,
    "sendIdWithCreate": true,
    "urlFields": ["_id"],
    "fields": [{
        "name": "Name",
        "isSort": "",
        "tableRef": "name"
    },{
        "name": "Merchant",
        "isSort": "",
        "tableRef": "merchant",
        "type":"objectName"
    },{
        "name": "Start Date",
        "isSort": "",
        "tableRef": "validFrom",
        "type":"formattedDate"
    },{
        "name": "End Date",
        "isSort": "",
        "tableRef": "validTo",
        "type":"formattedDate"
    }
    ],
    "viewButton":{
        "name": "View",
        "icon": "fa-search",
        "buttonClass": "btn-primary"
    },
    "queryButton":{
        "name": "Query",
        "icon": "fa-file",
        "buttonClass": "btn-primary"
    },
    "action": [{
        "name": "Edit",
        "icon": "fa-pencil",
        "buttonClass": "btn-primary",
        "type": "page",
        "action": "editRule",
        "roles":["Admin","Super Admin"],
        "fieldsToSend": {
            "_id": "_id"
        }
    }, {
        "name": "Delete",
        "icon": "fa-trash",
        "buttonClass": "btn-danger",
        "type": "apiCallConfirm",
        "title": "Delete Rule",
        "roles":["Super Admin"],
        "content": "Are you sure you want to delete Rule?",
        "api": "Rule/deleteWithChangeStatus",
        "fieldsToSend": {
            "name": "_id",
            "value": "_id"
        }
    },{
        "name": "Copy",
        "icon": "fa-copy",
        "buttonClass": "btn-primary",
        "type": "page",
        "action": "copyRule",  
        "roles":["Admin","Super Admin"], 
        "fieldsToSend": {
            "_id": "_id"
        }
    }],
    "button": [{
        "name": "Add Rule",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "createRule",
        "roles":["Admin","Super Admin"]
    }],
    "bottomButton": [{
        "name": "Play Selected",
        "icon": "plus",
        "class": "btn-success",
        "type": "page",
        "action": "",
        "functionName":"playSelectedClick()",
        "roles":["Admin","Super Admin"]
    }],
    "apiCall": {
        "url": "Rule/search",
        "params": "_id"
    },
    "removeSearch": true
}